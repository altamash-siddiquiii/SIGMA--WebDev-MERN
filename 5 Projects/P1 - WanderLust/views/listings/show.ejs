<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3">
                <h3 class="mt-3 mb-3"><%= listing.title %></h3>
            </div>
            <div class="card col-6 offset-3 show-card listing-card">
                <img src="<%= listing.image %>" class="card-img-top" alt="Listing image" style="height: 30vh;">
                <div class="card-img-overlay">
                    <!-- <h5 class="card-title"><%=listing.title%></h5>
                            <p class="card-text"><%=listing.description%></p> -->
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= listing.description %> <br>
                        &#8377; <%= listing.price ? listing.price.toLocaleString(`en-IN`) : 'N/A' %> <br>
                        <%= listing.location %> <br>
                        <%= listing.country %>
                    </p>
                </div>
            </div>
            <!-- <ul>
                <li><%= listing.title %></li>
                <li><%= listing.description %></li>
                <li>&#8377; <%= listing.price %></li>
                <li><%= listing.location %></li>
                <li><%= listing.country %></li>
            </ul> -->
            <div class="btns mb-3">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-primary offset-3 edit-btn">Edit</a>
                <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                    <button class="btn btn-primary offset-4 dlt-btn">Delete</button>
                </form>
            </div>
            <hr>
            <div class="col-8 offset-3 mb-3">
                <h4>Leave a Review</h4>
                <form action="/listings/<%=listing._id%>/reviews" method="post" class="needs-validation" novalidate>
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating:</label>
                        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comment:</label>
                        <textarea name="review[comment]" id="comment" placeholder="Write a comment" cols="21" rows="3" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please provide a comment for review.</div>
                    </div>
                    <button class="btn btn-outline-dark review-submit-btn">Submit</button>
                </form>
                <hr>
                <h5 class="mb-3"><%= listing.reviews.length ? "All Reviews" : "" %></h5>
                <div class="row">
                    <% for (review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Sam Altmash</h5>
                                <p class="card-text"><%= review.comment %></p>
                                <p class="card-text"><%= review.rating %> <%=review.rating === 1 ? "star" : "stars" %></p>
                            </div>
                            <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-dark mt-3 review-dlt-btn">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>