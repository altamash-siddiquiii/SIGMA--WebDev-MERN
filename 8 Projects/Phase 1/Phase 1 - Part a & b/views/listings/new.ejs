<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3 class="mt-3 mb-3">Create a new listing</h3>
                <form action="/listings" method="post">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" id="title" name="listing[title]" placeholder="Enter title" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea id="description" name="listing[description]" placeholder="Enter description" cols="21" rows="4" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL/Link:</label>
                        <input type="text" id="image" name="listing[image]" placeholder="Enter image url/link" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" id="price" name="listing[price]" placeholder="Enter price" class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location:</label>
                            <input type="text" id="location" name="listing[location]" placeholder="Enter location" class="form-control">
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" id="country" name="listing[country]" placeholder="Enter country name" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary mt-3 mb-3 add-btn">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </body>